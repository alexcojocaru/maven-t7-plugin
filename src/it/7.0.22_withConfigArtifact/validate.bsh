import java.io.*;

File libDir = new File( basedir, "target/tomcat/lib" );
File webappsDir = new File( basedir, "target/tomcat/webapps");
File confDir = new File(basedir, "target/tomcat/conf");

String[] expectedFiles = {
	"annotations-api.jar",
    "catalina-ant.jar",
    "catalina-ha.jar",
    "catalina-tribes.jar",
    "catalina.jar",
    "ecj-3.7.jar",
    "el-api.jar",
    "jasper-el.jar",
    "jasper.jar",
    "jsp-api.jar",
    "servlet-api.jar",
    "tomcat-api.jar",
    "tomcat-coyote.jar",
    "tomcat-dbcp.jar",
    "tomcat-i18n-es.jar",
    "tomcat-i18n-fr.jar",
    "tomcat-i18n-ja.jar",
    "tomcat-util.jar"
};

String[] expectedWebapps = {
	"docs",
	"examples",
	"ROOT",
	"manager",
	"host-manager"
};

String[] expectedConfigFiles = {
    "aConfigFile.txt"
};

for ( String expectedFile : expectedFiles )
{
    File file = new File( libDir, expectedFile );
    System.out.println( "Checking for existence of " + file );
    if ( !file.isFile() )
    {
        throw new Exception( "Missing file " + file );
    }
}

for (String expectedWebapp : expectedWebapps )
{
	File directory = new File(webappsDir, expectedWebapp);
	System.out.println( "Checking for existence of " + directory );
	if ( !directory.isDirectory() )
	{
		throw new Exception("Missing webapp " + directory );
	}
}

for (String expectedConfigFile : expectedConfigFiles )
{
    File file = new File(confDir, expectedConfigFile);
    System.out.println( "Checking for existence of " + file );
    if ( !file.isFile() )
    {
        throw new Exception("Missing file " + file );
    }
}

return true;